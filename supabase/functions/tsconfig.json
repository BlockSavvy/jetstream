{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "paths": {
      "http/*": ["../node_modules/http-server/lib/*"],
      "deno/*": ["./node_modules/deno-types/lib.deno.d.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  }
} 