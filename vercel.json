{
  "version": 2,
  "buildCommand": "next build && npm run build-storybook",
  "outputDirectory": ".next",
  "installCommand": "npm install --force",
  "framework": "nextjs",
  "regions": ["iad1"],
  "cleanUrls": true,
  "github": {
    "silent": true
  },
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/next",
      "config": { 
        "outputDirectory": ".next"
      }
    },
    {
      "src": ".storybook/**",
      "use": "@vercel/static",
      "config": {
        "distDir": "storybook-static"
      }
    }
  ],
  "routes": [
    { "src": "/storybook/(.*)", "dest": "/storybook-static/$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
} 